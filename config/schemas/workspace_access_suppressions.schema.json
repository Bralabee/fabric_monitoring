{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://usf-fabric-monitoring/schemas/workspace_access_suppressions.schema.json",
    "title": "Workspace Access Suppressions Configuration",
    "description": "Schema for workspaces that should be skipped by the enforcement job",
    "type": "object",
    "properties": {
        "description": {
            "type": "string",
            "description": "Human-readable description of this configuration file"
        },
        "workspaceIds": {
            "type": "array",
            "description": "List of workspace IDs (UUIDs) to skip during enforcement",
            "items": {
                "type": "string",
                "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
                "description": "Workspace ID in UUID format"
            },
            "uniqueItems": true
        },
        "workspaceNames": {
            "type": "array",
            "description": "List of workspace names to skip during enforcement (exact match)",
            "items": {
                "type": "string",
                "minLength": 1,
                "description": "Workspace display name"
            },
            "uniqueItems": true
        }
    },
    "additionalProperties": false
}